@using MyShopDesign.Models;
@{
    ViewBag.Title = "管理员编辑";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";

    T_Shop_Workers item = ViewBag.item;
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Basic Form Elements
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" action="/admin/workers/EditSave" method="post">
                            <div class="form-group">
                                <input type="hidden" name="Id" value="@item.Id"/>
                                <label>登录名</label>
                                <input class="form-control" name="Name" value="@item.Name">
                            </div>
                            <div class="form-group">
                                <label>密码</label>
                                <input class="form-control" name="Password" value="@item.Password">
                            </div>
                            <div class="form-group">
                                <label>姓名</label>
                                <input class="form-control" name="TrueName" value="@item.TrueName">
                            </div>
                            <div class="form-group">
                                <label>电话</label>
                                <input class="form-control" name="Phone" value="@item.Phone">
                            </div>
                            <div class="form-group">
                                <label>状态</label>
                                <input class="form-control" name="State" value="@item.State">
                            </div>

                            <button type="submit" class="btn btn-default">保存</button>
                            <button type="reset" class="btn btn-default">重置</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

